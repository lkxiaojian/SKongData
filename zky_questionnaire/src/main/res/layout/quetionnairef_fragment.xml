<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="qnViewModel"
            type="com.zky.zky_questionnaire.mvvm.viewmodle.QNViewModle" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f5f5">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_need_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:text="@{qnViewModel.needWrite}"
            android:textColor="@color/color_999999"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.refresh.lib.DaisyRefreshLayout
            android:id="@+id/drl_qn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:enableLoadMore="@{safeUnbox(qnViewModel.enableLoadMore)}"
            app:enableRefresh="@{safeUnbox(qnViewModel.enableRefresh)}"
            app:layout_constraintBottom_toTopOf="@+id/abt_upload_wj"
            app:layout_constraintTop_toTopOf="@id/atv_need_count"
            app:onAutoRefreshCommand="@{qnViewModel.onAutoRefreshCommand}"
            app:onLoadMoreCommand="@{qnViewModel.onLoadMoreCommand}"
            app:onRefreshCommand="@{qnViewModel.onRefreshCommand}">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:linearLayoutManager="@{safeUnbox(qnViewModel.orientation)}" />

        </com.refresh.lib.DaisyRefreshLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/abt_upload_wj"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_4a90e2_selector"
            android:text="上        传"
            android:textColor="@color/white"
            android:onClick="@{qnViewModel::startClick}"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>