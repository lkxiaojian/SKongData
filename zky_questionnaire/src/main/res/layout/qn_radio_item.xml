<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.zky.basics.api.common.entity.task.TaskQuestion" />
        <import type="android.view.View"/>
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:background="@color/white"
        android:minHeight="124dp"
        android:visibility="@{data.display? View.VISIBLE:View.GONE}"

        app:cardCornerRadius="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/qnTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                style="@style/qnTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{data.q_index+data.q_title}"
                app:layout_constraintTop_toTopOf="parent" />


            <com.zky.zky_questionnaire.view.CustomShowMoreRadio
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:listContent="@{data.q_option}"
                app:dataValue="@{data.q_index}"
                app:selectValues="@={data.selectValue}" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>