<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.zky.zky_questionnaire.TestData" />

        <import type="com.zky.zky_questionnaire.R" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_click"
        style="@style/qnCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/qnTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                style="@style/qnTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="select"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_select_xl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_ededed_3"
                android:drawableRight="@drawable/qn_xl"
                android:padding="5dp"
                android:paddingBottom="10dp"
                android:hint="请选择"
                android:text="@={data.selectValue}"
                android:textColor="@color/color_999999"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>