<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="mediaListViewModel"
            type="com.zky.multi_media.mvvm.viewmodle.MediaImageListViewModle" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.refresh.lib.DaisyRefreshLayout
            android:id="@+id/drl_media"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:enableLoadMore="@{safeUnbox(mediaListViewModel.enableLoadMore)}"
            app:enableRefresh="@{safeUnbox(mediaListViewModel.enableRefresh)}"
            app:layout_constraintBottom_toTopOf="@id/abt_up"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="10dp"
            app:onAutoRefreshCommand="@{mediaListViewModel.onAutoRefreshCommand}"
            app:onLoadMoreCommand="@{mediaListViewModel.onLoadMoreCommand}"
            app:onRefreshCommand="@{mediaListViewModel.onRefreshCommand}">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f5f5f5"
                app:linearLayoutManager="false" />
        </com.refresh.lib.DaisyRefreshLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/abt_up"
            style="@style/sureBt"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:onClick="@{mediaListViewModel::startClick}"
            android:text="上 传"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>