<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.zky.basics.api.common.entity.chine.TaskChineItemBean" />

        <import type="com.zky.task_chain.R" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cvClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="3dp"
        android:background="@color/white"
        android:paddingStart="12dp"
        tools:ignore="RtlSymmetry">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_fbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{@string/fb_user(data.userName)}"
            android:textColor="@color/color_4a4a4a"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@{@string/fb_type(data.type)}"
            android:textColor="@color/color_808080"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/atv_fbr" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="40dp"
            android:text="@{@string/fb_message(data.content)}"
            android:textColor="@color/color_808080"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/atv_type" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_fbsj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:text="@{@string/fb_cratetime(data.createDate)}"
            android:textColor="@color/color_808080"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/atv_message" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:background="@{data.status==0? @color/color_FF6300:@color/color_44C88C}"
            android:gravity="center"
            android:text="@{data.status==0? @string/fb_wfk:@string/fb_yfk}"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/atv_fbsj" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>