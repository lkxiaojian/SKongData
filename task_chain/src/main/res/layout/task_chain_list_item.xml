<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="String" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cvClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="3dp"
        android:background="@color/white"
        tools:ignore="RtlSymmetry">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_fbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布人：某某"
            android:textColor="@color/color_4a4a4a"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型：指派"
            android:textColor="@color/color_808080"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/atv_fbr" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="内容：收集张三的照片收集张三的照片收集张三的
照片收集张三的照片收集张三的照片"
            android:layout_marginEnd="40dp"
            android:textColor="@color/color_808080"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/atv_type" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_fbsj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布时间：2018-03-09"
            android:textColor="@color/color_808080"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/atv_message" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="90dp"
            android:layout_height="33dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/color_FF6300"
            android:text="未反馈"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/atv_fbsj"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>