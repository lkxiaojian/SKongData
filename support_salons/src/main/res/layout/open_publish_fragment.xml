<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="openPublishViewModle"
            type="com.zky.support_salons.mvvm.viewmodle.OpenPublishViewModle" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f5f5">



        <com.refresh.lib.DaisyRefreshLayout
            android:id="@+id/drl_q"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="103dp"
            app:enableLoadMore="@{safeUnbox(openPublishViewModle.enableLoadMore)}"
            app:enableRefresh="@{safeUnbox(openPublishViewModle.enableRefresh)}"
            app:onAutoRefreshCommand="@{openPublishViewModle.onAutoRefreshCommand}"
            app:onLoadMoreCommand="@{openPublishViewModle.onLoadMoreCommand}"
            app:onRefreshCommand="@{openPublishViewModle.onRefreshCommand}">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:linearLayoutManager="@{safeUnbox(openPublishViewModle.orientation)}"
                android:background="@color/color_f5f5f5"
                />

        </com.refresh.lib.DaisyRefreshLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>