<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="java.lang.String" />

        <variable
            name="show"
            type="Boolean" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:paddingBottom="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="10dp"
            android:text="张三"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/aiv_head"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:text="昨天12:34"
            android:textColor="#ff9b9b9b"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/aiv_head"
            app:layout_constraintTop_toBottomOf="@id/atv_username" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="62dp"

            android:layout_marginEnd="18dp"
            android:text="一个没有参加的工作，不知经过的事情。却要
我们给出个结果。怎么办？再核实吧！"
            android:textColor="#ff000000"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/aiv_head" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="62dp"
            app:layout_constraintTop_toBottomOf="@+id/atv_message" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>