<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"

    >


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/layout_tour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabGravity="fill"
        app:tabIndicator="@drawable/shap_indicator"
        app:tabIndicatorColor="@color/color_3388EF"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="4dp"
        app:tabMinWidth="30dp"
        app:tabMode="fixed"
        app:tabPaddingEnd="10dp"
        app:tabPaddingStart="10dp"
        app:tabRippleColor="@android:color/transparent"
        app:tabSelectedTextColor="@color/color_3388EF"
        app:tabTextAppearance="@style/TabLayoutTextStyleC16"
        app:tabTextColor="@color/color_9b9b9b">

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager_tour_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f5f5f5"
        android:paddingBottom="40dp"
        app:layout_constraintTop_toBottomOf="@id/layout_tour" />


</androidx.constraintlayout.widget.ConstraintLayout>