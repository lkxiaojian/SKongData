<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="java.lang.String" />

        <variable
            name="show"
            type="Boolean" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cvClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="8dp"
        android:paddingBottom="9dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="7dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="57dp"
            android:text="李四、昭武、王刘等12人觉得很赞"
            android:textColor="#ff4a90e2"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/aiv_head"
            app:layout_constraintLeft_toRightOf="@+id/aiv_head"
            app:layout_constraintTop_toTopOf="@id/aiv_head" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginEnd="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/aiv_head"
            android:layout_marginStart="67dp"
            android:layout_marginTop="7dp"
            android:background="#F1F1F1"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>