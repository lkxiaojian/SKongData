<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="departmentDataViewModel"
            type="com.zky.basics.main.mvvm.viewmodel.DepartmentDataViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f5f5">



        <com.refresh.lib.DaisyRefreshLayout
            android:id="@+id/drl_dd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:enableLoadMore="@{safeUnbox(departmentDataViewModel.enableLoadMore)}"
            app:enableRefresh="@{safeUnbox(departmentDataViewModel.enableRefresh)}"
            app:onAutoRefreshCommand="@{departmentDataViewModel.onAutoRefreshCommand}"
            app:onLoadMoreCommand="@{departmentDataViewModel.onLoadMoreCommand}"
            app:onRefreshCommand="@{departmentDataViewModel.onRefreshCommand}">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:linearLayoutManager="@{safeUnbox(departmentDataViewModel.orientation)}" />

        </com.refresh.lib.DaisyRefreshLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>