<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="data"
            type="com.zky.basics.api.common.entity.task.TaskWjBean" />

        <import type="com.zky.basics.main.R" />
    </data>

    <com.zyp.cardview.YcCardView
        android:id="@+id/cv_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:background="@color/white"
        app:ycCardElevation="6dp"
        app:ycStartShadowColor="#124B4B4B">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@{data.wjName}"
                android:textColor="@color/color_black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="28dp"
                android:text="@{data.collectStatus==1 ?R.string.wj_ycj:R.string.wj_wcj}"
                android:textColor="@{data.collectStatus==1? @color/color_009688:@color/color_FA6400}"
                android:textSize="12sp"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/recovery_default_margin_8dp"
                android:layout_height="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="9dp"
                android:src="@drawable/ri_8"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.zyp.cardview.YcCardView>
</layout>