<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="data"
            type="com.zky.basics.api.common.entity.task.TaskChartAdBean" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.zky.basics.common.view.LBarChartView
            android:id="@+id/lbcv"
            android:layout_width="316dp"
            android:layout_height="190dp"
            android:background="#fff5f5f5"
            app:avgTitleTextSize="12sp"
            app:barShowNumber="6"
            app:borderColor="@color/color_black"
            app:bottomTextSpace="30dp"
            app:dataTextColor="@color/color_black"
            app:dataTextSize="12sp"
            app:descriptionTextColor="@color/color_black"
            app:descriptionTextSize="20sp"
            app:isClickAnimation="true"
            app:labelTextColor="@color/color_black"
            app:labelTextSize="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:leftTextSpace="30dp"
            app:titleTextColor="@color/color_black"
            app:titleTextSize="20sp"
            app:topTextSpace="30dp"
            app:xlineColor="@color/color_black" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>