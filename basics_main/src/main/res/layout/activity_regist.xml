                android:hint="单位职务"
                android:maxLength="20"
                android:text="@={viewModel.data.job}"
                android:textColor="@color/color_4a4a4a"
                android:textColorHint="@color/color_b0b0b0"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
