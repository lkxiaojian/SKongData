<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

        <import type="android.view.View" />

        <variable
            name="taskViewModel"
            type="com.zky.basics.main.mvvm.viewmodel.TaskViewModel" />

        <import type="com.zky.basics.main.R" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f5f5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_top_name"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_fff_3"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="@{taskViewModel.taskBean.dataAttr1}"
                android:textColor="@color/color_black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_ed_3"
                android:lines="1"
                android:paddingLeft="4dp"
                android:text="@={taskViewModel.attr1}"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_two"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_fff_3"
            app:layout_constraintTop_toBottomOf="@id/cl_top_name">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="@{taskViewModel.taskBean.dataAttr2}"
                android:textColor="@color/color_black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/aet_idcatd"
                android:layout_width="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_ed_3"
                android:maxLines="1"
                android:paddingStart="4dp"
                android:singleLine="true"
                android:text="@={taskViewModel.attr2}"
                android:visibility="@{taskViewModel.att2Show? View.GONE:View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="RtlSymmetry" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_se_time"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_ed_3"
                android:drawableRight="@drawable/xiala"
                android:drawablePadding="4dp"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:onClick="@{taskViewModel::startClick}"
                android:paddingLeft="4dp"
                android:singleLine="true"
                android:text="@={taskViewModel.attr2}"
                android:visibility="@{taskViewModel.att2Show? View.VISIBLE:View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_fff_3"
            app:layout_constraintTop_toBottomOf="@id/cl_two">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="@{taskViewModel.taskBean.dataAttr3}"
                android:textColor="@color/color_black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_se_ad"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_ed_3"
                android:drawableRight="@drawable/xiala"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:onClick="@{taskViewModel::startClick}"
                android:paddingLeft="4dp"
                android:singleLine="true"
                android:text="@{taskViewModel.attr3}"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/abt_add"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_4a90e2_selector"
            android:onClick="@{taskViewModel::startClick}"
            android:text="完        成"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>